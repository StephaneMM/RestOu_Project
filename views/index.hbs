<div class="container">



    <form class="search" action="/restaurants" method="GET">
        <input class="bar" type="text" placeholder="Search by department..." name="resName">
        <button><i class="fas fa-search"></i>SEARCH</button>
        <button><a href="/restaurants"><i class="fas fa-sync-alt"></i>REFREH</a></button>
    </form>




  {{! just a quick config with the CSS from artistify to have a quick visual feedback }}
  {{! Copied CSS in public/stylesheets/home.index }}

  <div class="mainContainer">
    <div class="d-flex flex-wrap">
      {{#each restaurant}}
    
      <div class="card m-3 album" style="background-image: url({{this.picture}}">
        <a href="/restaurants/{{this._id}}" class="black" >
            <p class="black">
              {{this.name}}<br>
              {{this.stars}}<br>
              {{this.address}}<br>
              {{this.cuisineType}}
            </p>
        
        </a>
        </div>
      {{/each}}
    </div>

    <aside class="mapContainer">

    </aside>

  </div>
</div>