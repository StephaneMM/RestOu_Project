
<div class="banner-wish-list" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.dribbble.com/users/4451315/screenshots/12271331/media/ad7f87f705c2915ed0e3c690d1d9d1d0.png?compress=1&resize=1600x1200);">
  <div class="container d-flex justify-content-center">
    <h1 class="text-center white mt-5">❤️ Your Wish-List 😋</h1>
  </div>

    <div class="d-flex container-wish-list">
        <div class="cards flex-wrap">
            {{#each restaurants}}
                <div class="card-restaurant card" style="background-image: url({{this.picture}}">
                    <a href="/restaurants/{{this._id}}" class="black" >
                        <div class="w-100 d-flex align-items-center justify-content-between">
                            <p class="white mb-0">{{this.name}}</p>  
                        </div>
                        <p class="white">{{this.stars}}</p>
                        <p class="white"> {{this.address}}</p>
                        <p class="white">{{this.cuisineType}}</p>        
                    </a>
                </div>
            {{/each}}
        </div>
    </div>

</div>
 
    



</div>
