

<main class="container restauPage-container">

  <div class="restauPage-unscrollable">
    <div class="img-container">
      <img src="{{restaurant.picture}}" alt="{{restaurant.name}} picture" />
    </div>
    <div id="map" class="restau-map" data-lat={{lat}} data-lng={{lng}}>
    </div>
  </div>

  <div class="infos-scrollable">
{{#if isLoggedIn}}
    <div class="favoriteNav">
      {{#if favorisHeart}}
        <i class="favoris fas fa-heart cursor-pointer " data-restou={{restaurant._id}} style="color:#C71585"></i>
      {{else}}
        <i class="favoris fas fa-heart cursor-pointer " data-restou={{restaurant._id}} style="color:white"></i>
      {{/if}}
    </div>
  {{/if}}

      <h1> {{restaurant.name}} </h1>
    <div class="section-container">
      <p>{{restaurant.stars}} MICHELIN'S STARS</p> <br>
      <p>{{restaurant.address}}</p> <br>  
      <p>`Budget {{restaurant.minPrice}} - {{restaurant.maxPrice}} EUR`</p> <br>
      <p>{{restaurant.standing}}</p> <br>
      <p>{{restaurant.cuisineType}}</p> <br>
    </div>

    <div class="section-container description">
      <h3>Description</h3>
      <p>{{restaurant.description}}</p>
      <h3>Eager to book a table ?</h3>
      <p>{{restaurant.website}}</p>
      <p>{{restaurant.phoneNumber}}</p>
      <p>{{restaurant.openingHours}}</p>
    </div>

    <div class="section-container">
      <div class="display-review">
        {{#if reviews}}
        <h3>Reviews</h3>
        {{#each reviews}}
          <p>{{this.userId.firstName}} {{this.userId.lastName}} : "{{this.comment}}" (Note {{this.note}}/5)</p>
        {{/each}}
        {{/if}}
      </div>
      {{#if isLoggedIn}}
      <div class="new-review-box">
        {{>reviewFormPartial}}
      </div>
      {{/if}}
      {{#if currentUser.isAdmin}}
     {{>adminButton}}
     {{/if}}
    </div>
  </div>

</main>